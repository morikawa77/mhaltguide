---
interface RewardItem {
  type: string;
  description: string;
  value?: number;
}

interface Props {
  title: string;
  description?: string;
  rewards: RewardItem[];
}

import RewardIcon from './RewardIcon.astro';

const { title, description, rewards } = Astro.props;
---

<div class="bg-slate-800 rounded-lg overflow-hidden border border-slate-700 shadow-lg transform transition-transform hover:scale-[1.01]">
  <div class="bg-gradient-to-r from-red-800 to-red-900 px-6 py-4">
    <h2 class="text-2xl font-bold text-white">{title}</h2>
    {description && <p class="text-gray-300 mt-1">{description}</p>}
  </div>
  
  <div class="p-6">
    <ul class="space-y-4">
      {rewards.map((reward) => (
        <li class="flex items-start gap-3">
          <div class="mt-1">
            <RewardIcon type={reward.type} value={reward.value} />
          </div>
          <p class="text-gray-200">
            {reward.type === 'none' ? (
              <span class="font-bold text-red-400">{reward.description}</span>
            ) : (
              <span class="italic">{reward.description}</span>
            )}
          </p>
        </li>
      ))}
    </ul>
  </div>
</div>